
function palindrome(str) {
  //regex: remove non-alphanumeric charachters
  var a = str.replace(/[^0-9a-z]/gi, '');
  a.toLowerCase();

  // reversing the string/s
  var array = a.split("");
  array.reverse();
  var compare = array.join("");

  
  // check if the string is a palindrome
  if (a == compare){
     return true;
  } else {
    return false;
  }

}



palindrome("_eye");
